    <%- script %>
    <script>
        <% if(flash.success && flash.success.length > 0){ %>
            <!-- <h5><%= flash.success %></h5> -->
            new Noty({
                theme: 'relax',
                text: '<%= flash.success %>',
                type: 'success', // colour
                layout: 'topRight',
                timeout: 1500,
            }).show();
        <% } %>
        <% if(flash.error && flash.error.length > 0){ %>
            <!-- <h5><%= flash.error %></h5> -->
            new Noty({
                theme: 'relax',
                text: '<%= flash.error %>',
                type: 'error', // colour
                layout: 'topRight',
                timeout: 1500,
            }).show();
        <% } %>
    </script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/3.0.5/socket.io.min.js" integrity="sha512-L9L4VhE0D58fCxtJiYDHbIzSVfNGY24rhQPWTZPschTVKLpucPsLeT0FSjfnylLYARalTQqgwXsjjhi+wUTwIw==" crossorigin="anonymous"></script>
    <!-- io global variable is initialised by above cdn -->
    <script src="/js/notificationEngine.js"></script>
    <% if(locals.user){ %>
    <script>
        // console.log("***********++++++************");
        new NotificationEngine("<%= locals.user._id %>");
    </script>
    <% } %>
    <script>
     var perfEntries = performance.getEntriesByType("navigation");

        if (perfEntries[0].type === "back_forward") {
            location.reload(true);
        }
    </script>

    </body>

</html>